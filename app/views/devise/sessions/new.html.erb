<style>
  /* Style personnalisé pour le formulaire de connexion */
  .bg-dark.text-white {
    background-color: transparent !important; /* Fond transparent */
    border: none; /* Supprimer la bordure */
  }

  .card-header {
    background-color: transparent !important; /* Fond transparent pour le header */
    border: none; /* Supprimer la bordure */
  }

  .card-header h2 {
    color: #7f00ff; /* Titre en violet */
    background-color: transparent; /* Fond transparent pour le titre */
  }

  .form-control {
    background-color: rgba(0, 0, 0, 0.5); /* Fond du formulaire noir semi-transparent */
    border-color: rgba(127, 0, 255, 0.2); /* Bordure violette transparente */
    color: #fff; /* Texte blanc */
  }

  .form-control:focus {
    background-color: rgba(0, 0, 0, 0.7); /* Fond du formulaire noir plus foncé lorsqu'il est en focus */
  }

  .btn-primary {
    background-color: transparent; /* Bouton transparent */
    border-color: #7f00ff; /* Bordure violette */
    color: #7f00ff; /* Texte violet */
  }

  .btn-primary:hover {
    background-color: rgba(127, 0, 255, 0.1); /* Fond du bouton violet semi-transparent au survol */
    color: #fff; /* Texte blanc au survol */
  }
</style>

<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-md-6">
      <div class="bg-dark text-white">
        <div class="card-header bg-dark text-center"><h2 class="text-white">Log in</h2></div>

        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "form" }) do |f| %>
            <div class="mb-3">
              <%= f.label :email, class: "form-label text-white" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= f.label :password, class: "form-label text-white" %>
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="mb-3 form-check">
                <%= f.check_box :remember_me, class: "form-check-input" %>
                <%= f.label :remember_me, class: "form-check-label text-white" %>
              </div>
            <% end %>

            <div class="text-center">
              <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>






