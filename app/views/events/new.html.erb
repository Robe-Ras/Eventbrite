<div class="container py-5">
  <div class="row justify-content-center">
    <div class="col-lg-12 text-center mb-5 mt-5">
      <h1 class="text-purple">Créer un nouvel événement</h1>
    </div>
    <div class="col-lg-6">
      <%= form_with(model: @event, url: events_path, method: :post) do |form| %>
          <div class="row">                    
              <div class="col-lg-6">
                  <%= form.hidden_field :admin_id, value: current_user.id %>
                  <div class="form-group mt-3">
                      <%= form.text_field :title, class: "form-control bg-dark text-white", placeholder: "Titre", style: "color: white; text-shadow: 1px 1px 2px black;" %>
                  </div>
              </div>
              <div class="col-lg-6">
                  <div class="form-group mt-3">
                      <%= form.time_field :start_date, class: "form-control bg-dark text-white", placeholder: "Date de début", style: "color: white; text-shadow: 1px 1px 2px black;" %>
                  </div>
              </div>
              <div class="col-lg-6">
                  <div class="form-group mt-3">
                      <%= form.number_field :duration, class: "form-control bg-dark text-white", placeholder: "Durée (en minutes)", style: "color: white; text-shadow: 1px 1px 2px black;" %>
                  </div>
              </div>
              <div class="col-lg-12">
                  <div class="form-group mt-3">
                      <%= form.text_area :description, class: "form-control bg-dark text-white", placeholder: "Description", style: "color: white; text-shadow: 1px 1px 2px black;" %>
                  </div>
              </div>
              <div class="col-lg-6">
                  <div class="form-group mt-3">
                      <%= form.text_field :location, class: "form-control bg-dark text-white", placeholder: "Lieu", style: "color: white; text-shadow: 1px 1px 2px black;" %>
                  </div>
              </div>
              <div class="col-lg-6">
                  <div class="form-group mt-3">
                      <%= form.number_field :price, class: "form-control bg-dark text-white", placeholder: "Prix", style: "color: white; text-shadow: 1px 1px 2px black;" %>
                  </div>
              </div>
              <div class="col-lg-12">
                  <%= form.submit "Créer l'événement", class: "btn btn-outline-light btn-lg btn-purple mt-3" %>
              </div>
          </div>
      <% end %>
    </div>
  </div>
</div>

<% if @event && @event.errors.any? %>
    <p class="text-white">Nous n'avons pas réussi à créer l'événement pour la (ou les) raison(s) suivante(s) :</p>
    <% @event.errors.full_messages.each do |message| %>
        <p class="alert alert-danger" role="alert"><%= message %></p>
    <% end %>
<% end %>



