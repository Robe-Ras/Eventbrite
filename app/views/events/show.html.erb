<div class="col-md-4">
        <!-- Début de l'élément avec les vagues et l'icône -->
        <div class="card box-shadow mx-auto my-5" style="width: 18rem;">
          <!-- Image aléatoire -->
          
          <div class="card-body">
            <!-- Titre du gossip -->
            <h5 class="card-title"><%= @event.title %></h5>
            <hr>
            <!-- Auteur du gossip -->
            <% if @event.admin %>
              <p class="card-text">Par : <%= @event.admin.first_name %></p>
            <% else %>
              <p class="card-text">Par : Anonyme</p>
            <% end %>
            <!-- Contenu du gossip -->
            <p class="card-text"><%= @event.description %></p>
            <!-- Bouton Voir plus -->
            <%= link_to "Voir plus", event_path(@event), class: "btn btn-primary" %>
          </div>
        </div>
        <!-- Fin de l'élément avec les vagues et l'icône -->
      </div>